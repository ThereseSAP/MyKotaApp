{
    "authenticationMethod": "route",
    "logout": { 
        "logoutEndpoint": "/logout"
      }, 
    "routes": [
        {
            "source": "^/mainsrv/(.*)$",
            "target": "$1",
            "destination": "dest_mainsrv",
            "authenticationType": "basic",
            "csrfProtection": false
        },
        {
            "source": "^(.*)",
            "localDir": "webapp",
            "authenticationType": "xsuaa",
            "cacheControl": "no-cache, no-store, must-revalidate"
        }
  ]
}